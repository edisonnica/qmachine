git_repo = {
    git: 'https://github.com/qmachine/qm-ruby.git'
}

local_fs = {
    path: File.join(Dir.pwd, '..', '..', 'src', 'ruby-gem')
}

gem 'json'
gem 'qm', (FileTest.directory?(local_fs[:path]) ? local_fs : git_repo)

ruby '2.2.0'

source 'https://rubygems.org'

