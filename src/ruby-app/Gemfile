from_dir = {
    path: File.join(Dir.pwd, '..', '..', 'src', 'ruby-gem')
}

from_git = {
    git: 'https://github.com/qmachine/qm-ruby.git'
}

gem 'facter'
gem 'json'
gem 'qm', (FileTest.directory?(from_dir[:path]) ? from_dir : from_git)
gem 'sqlite3', {
    platforms: ['ruby']
}

ruby '2.2.0'

source 'https://rubygems.org'

